{{#if navigation.length}}
{{#each navigation}}
<li data-depth="{{or ../level 0}}">

  {{#if ./content}}
  {{#if ./url}}
  <a href="
      {{~#if (eq ./urlType 'internal')}}{{{relativize ./url}}}
      {{~else}}{{{./url}}}{{~/if}}">{{{./content}}}</a>
  {{/if}}
  {{/if}}

  {{#if ./items.length}}
  <ul class="navtree-nested">
    {{/if}}
    {{> toc navigation=./items level=(increment ../level)}}
    {{#if ./items.length}}
  </ul>
  {{/if}}

</li>
{{/each}}
{{/if}}