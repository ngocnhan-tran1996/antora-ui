<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    {{#if page.breadcrumbs}}

    {{#with page.componentVersion}}
    {{#if (and ./title (ne ./title @root.page.breadcrumbs.0.content))}}
    <li class="breadcrumb-item{{#if (eq @root.page.url ./url)}} active{{/if}}">
      <a class="text-decoration-none" href="{{{relativize ./url}}}">{{{./title}}}</a>
    </li>
    {{/if}}
    {{/with}}

    {{#each page.breadcrumbs}}
    <li class="breadcrumb-item{{#if (eq @root.page.url ./url)}} active{{/if}}">
      {{~#if (and ./url (eq ./urlType 'internal'))~}}
      <a class="text-decoration-none" href="{{{relativize ./url}}}">{{{./content}}}</a>
      {{~else~}}
      {{{./content}}}
      {{~/if~}}
    </li>
    {{/each}}

    {{/if}}
  </ol>
</nav>