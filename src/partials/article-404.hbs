<div class="bd-content ps-lg-2">
  <h2>{{{or page.title 'Page Not Found'}}}</h2>
  <div class="text-center">
    <img src="https://www.animesxis.com.br/wp-content/uploads/2016/12/erro-404-anime-xis.jpg" alt="Page Not Found"
      class="img-fluid img-thumbnail d-xxl-block" />

    {{#each site.components}}
    <li class="component{{#if (eq this @root.page.component)}} is-current{{/if}}">
      <a class="title" href="{{{relativize ./url}}}">{{{./title}}}</a>
    </li>
    {{/each}}

  </div>
</div>